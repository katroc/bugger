{
  "name": "bugger-mcp",
  "version": "1.0.1",
  "description": "MCP Server for managing bugs, feature requests, and improvements",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "npm run build && node dist/stack-trace-parser.test.js && node dist/manager-update-and-sort.test.js && node dist/semantic-search-fts.test.js && node dist/mcp-tools.test.js",
    "test:mcp": "npm run build && node dist/mcp-tools.test.js",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "mcp",
    "bugger",
    "bugs",
    "features",
    "improvements"
  ],
  "author": "katroc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katroc/bugger.git"
  },
  "bugs": {
    "url": "https://github.com/katroc/bugger/issues"
  },
  "homepage": "https://github.com/katroc/bugger#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chalk": "^5.4.1",
    "sqlite-vec": "^0.1.2",
    "sqlite3": "^5.1.7",
    "tree-sitter": "^0.21.1",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.8",
    "typescript": "^5.8.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3"
  },
  "bin": {
    "bugger-mcp": "dist/index.js"
  },
  "eslintConfig": {
    "extends": [
      "./.eslintrc.cjs"
    ]
  }
}
